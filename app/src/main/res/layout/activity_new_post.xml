<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xinyue.helloworld.Activities.NewPostActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
    >

        <EditText
            android:id="@+id/title"
            android:hint="Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/destination"
            android:layout_height="wrap_content"
            android:hint="@string/destination"
            android:layout_width="fill_parent"></EditText>

        <EditText
            android:id="@+id/departure_date"
            android:layout_height="wrap_content"
            android:hint="@string/departure"
            android:layout_width="fill_parent"></EditText>

        <EditText
            android:id="@+id/return_date"
            android:layout_height="wrap_content"
            android:hint="@string/return_date"
            android:layout_width="fill_parent"></EditText>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="3"
                android:text="Group Size"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/group_size"
                android:layout_weight="2"
                android:hint="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:text="@string/privacy"/>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioGroup">

            <RadioButton android:id="@+id/radio_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option1"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option2"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private"
                android:onClick="onRadioButtonClicked"/>

        </RadioGroup>
            </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="left"
            android:orientation="horizontal"
            android:id="@+id/newpost_addfriend"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingTop="5dp"
                android:singleLine="false"
                android:text="Add Members" />

            <EditText android:id="@+id/add_friend"
                android:layout_width="fill_parent"
                android:hint="Click to Add Friends"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <EditText
            android:id="@+id/addtional_information"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:layout_width="fill_parent"></EditText>



    </LinearLayout>

</RelativeLayout>
